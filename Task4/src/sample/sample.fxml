<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="568.0" prefWidth="922.0"
      xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">
   <children>
      <TextArea fx:id="chatText" editable="false" prefHeight="422.0" prefWidth="922.0" wrapText="true"
                VBox.vgrow="ALWAYS"/>
      <HBox alignment="BOTTOM_CENTER">
         <children>
            <TextField fx:id="chatMessage" alignment="BOTTOM_LEFT" editable="true" onKeyPressed="#addTextOnEnter"
                       prefHeight="26.0" prefWidth="772.0" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#addText"
                    prefHeight="26.0" prefWidth="113.0" text="Send" HBox.hgrow="ALWAYS"/>
         </children>
      </HBox>
   </children>
</VBox>